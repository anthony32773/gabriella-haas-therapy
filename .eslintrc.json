{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:vue/vue3-recommended",
    "plugin:@typescript-eslint/recommended",
    "@nuxtjs/eslint-config-typescript",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "parser": "@typescript-eslint/parser",
    "sourceType": "module",
    "project": "./tsconfig.json",
    "extraFileExtensions": [
      ".vue"
    ],
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "vue",
    "@typescript-eslint"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ]
  },
  "overrides": [
    {
      "rules": {
        "no-unused-vars": "off",
        "no-console": "off"
      },
      "files": [
        "*.ts",
        "*.tsx"
      ]
    }
  ]
}